extends ../layouts/commoncss

block content
    head
        style
            include ./css/animation.css
            include ./css/create.css
    body
        -var s=["Math", "Japanese", "English"]
        div(class="banner")
            h1(class="banner-head") Edit the profile:
        //- script(type="text/javascript").
        //-     if (10 == 10) {
