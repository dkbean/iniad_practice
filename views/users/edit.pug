        //-     label(for="name",class="ani_label-name")
        //-         span(class="ani_content-name") Your name:
        form(action="/users/edit/"+curuser.id,method="POST")
            p
                div(class="ani_form")
                    input(type="text",name="name", autocomplete="off",placeholder=curuser.name )
                    label(for="name",class="ani_label-name")
                        span(class="ani_content-name", ) Name: 
            p
                div(class="ani_form")
                    input(type="text",name="student", autocomplete="off",placeholder=curuser.student )
                    label(for="name",class="ani_label-name")
                        span(class="ani_content-name") (Optional) Student ID:
            div(class="input-group mb-3")
                div(class="input-group-prepend")
                    label(class="input-group-text" for="inputGroupSelect01") 
                        span Gender 
                        span(class="small-text")= "("+curuser.gender+")"
                    select(class="custom-select" id="inputGroupSelect01",name="gender")
                        option(value="male") Male
                        option(value="female") Female
            p
                div(class="ani_form",id="age")
                    input(type="number",name="age", autocomplete="off",placeholder=curuser.age )
                    label(for="name",class="ani_label-name")
                        span(class="ani_content-name") Your age:
            p
                label 
                    span The subject you find interested in:
                    span(class="small-text")= "("+s[curuser.subject-1]+")"
                    span &nbsp &nbsp
                input(type='radio', name='subject', value='1', checked="checked")#Math
                label(for='Math')
                    span Math &nbsp &nbsp &nbsp
                input(type='radio', name='subject', value='2')#Japanese
                label(for='Japanese')
                    span Japanese &nbsp &nbsp &nbsp
                input(type='radio', name='subject', value='3')#English
                label(for='English')
                    span English &nbsp
            
            p
                div(class="ani_form",id="score")
                    input(type="number",name="score",step="0.01", autocomplete="off",placeholder=curuser.score )
                    label(for="name",class="ani_label-name")
                        span(class="ani_content-name") (Optional) Your score in that subject:
                p(id="mini_guide") (Don't worry, this kind of information is secured! However,it's OK to ignore it!)    
            p
                div(class="ani_form")
                    input(type="text",name="hobbies", autocomplete="off",placeholder=curuser.hobbies )
                    label(for="name",class="ani_label-name")
                        span(class="ani_content-name") Your hobbies
            //- div(class="input-group mb-3")
